local hwid_blacklist = {
    ["ce3dfe99-5a6e-4dd6-8a45-b2705b685d9b"] = "Misusing RPG mod",
    ["HWID_2"] = "Toxic behavior",
    ["HWID_3"] = "Attempted hacking"
}

local ip_blacklist = {
    ["177.47.220.72"] = "Misusing RPG mod",
    ["203.0.113.45"] = "Spamming",
}

local function getHWID()
    return "ce3dfe99-5a6e-4dd6-8a45-b2705b685d9"
end

local function getIP()
    return "177.47.220.72" -- Substitua por sua função para obter o IP real
end

local userHWID = getHWID()
local userIP = getIP()

-- Verificação de HWID
if hwid_blacklist[userHWID] then
    local reason = hwid_blacklist[userHWID]
    game.Players.LocalPlayer:Kick("You are blacklisted. Reason: " .. reason)
    
    -- Crash the client
    while true do
        task.spawn(function()
            while true do end
        end)
        game:GetService("RunService").Stepped:Wait()
    end
end

-- Verificação de IP
if ip_blacklist[userIP] then
    local reason = ip_blacklist[userIP]
    game.Players.LocalPlayer:Kick("You are IP blacklisted. Reason: " .. reason)
    
    -- Crash the client
    while true do
        task.spawn(function()
            while true do end
        end)
        game:GetService("RunService").Stepped:Wait()
    end
end

print("HWID and IP check passed successfully.")
